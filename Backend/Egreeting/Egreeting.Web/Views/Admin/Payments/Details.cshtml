@model Egreeting.Models.Models.Payment
@using Egreeting.Domain
@using Egreeting.Models.Models
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Detail - Payment";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Payment management
        <small>Detail</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li>Admin</li>
        <li><a href="@Url.Action("Index")">Payments</a></li>
        <li class="active">Detail</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title">Detail payment</h3>
        </div><!-- /.box-header -->
        <form>
            <div class="box-body">
                <div class="form-group">
                    <label for="EgreetingUserID">User</label>
                    @Html.DropDownList("EgreetingUserID", new SelectList((Dictionary<int, string>)ViewBag.EgreetingUsers, "Key", "Value", Model.EgreetingUser.EgreetingUserID), new { @class = "form-control", @disabled = "disabled" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Month)
                    @Html.EditorFor(m => m.Month, new { htmlAttributes = new { @class = "form-control", @placeholder = "Month", @id = "Month", @disabled = "disabled"  } })
                    @Html.ValidationMessageFor(model => model.Month, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Year)
                    @Html.EditorFor(m => m.Year, new { htmlAttributes = new { @class = "form-control", @placeholder = "Year", @id = "Year", @disabled = "disabled"  } })
                    @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.PaymentStatus)
                    @Html.CheckBoxFor(m => m.PaymentStatus, new { htmlAttributes = new { @class = "form-control", @placeholder = "PaymentStatus", @id = "PaymentStatus", @disabled = "disabled"  } })
                    @Html.ValidationMessageFor(model => model.PaymentStatus, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="box-footer">
                <button class="btn btn-primary" type="button" onclick="BackToIndex()">Back to index</button>
            </div>
        </form>
    </div>


</section><!-- /.content -->
</div><!-- /.content-wrapper -->
<!-- Main content -->

@section scripts{
    <script>
        function BackToIndex()
        {
            window.location.href = ('@Url.Action("Index")');
        }
    </script>
}
