@model Egreeting.Models.Models.Ecard

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Create";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Ecard Management
        <small>Edit</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li>Admin</li>
        <li><a href="@Url.Action("Index")">Categories</a></li>
        <li class="active">Edit</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title">Edit Ecard</h3>
        </div><!-- /.box-header -->
        <form>
            <div class="box-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <input type="hidden" name="EcardID" value="@Model.EcardID">
                <div class="form-group">
                    <label for="">Ecard Name</label>
                    <input type="text" class="form-control" id="EcardName" placeholder="Ecard name" name="EcardName" onblur="CreateSlug()" value="@Model.EcardName" readonly>
                    @Html.ValidationMessageFor(model => model.EcardName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="">Ecard Slug</label>
                    <input type="text" class="form-control" id="EcardSlug" placeholder="Ecard slug" name="EcardSlug" value="@Model.EcardSlug" readonly>
                    @Html.ValidationMessageFor(model => model.EcardSlug, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="box-footer">
                <button class="btn btn-primary" type="button" onclick="BackToIndex()">Back to index</button>
            </div>

        </form>
    </div>


</section><!-- /.content -->
</div><!-- /.content-wrapper -->
<!-- Main content -->

@section scripts{
    <script>
        function BackToIndex()
        {
            window.location.replace('@Url.Action("Index")');
        }
    </script>
}
