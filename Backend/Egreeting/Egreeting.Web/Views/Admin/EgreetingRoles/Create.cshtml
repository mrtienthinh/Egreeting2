@model Egreeting.Models.Models.EgreetingRole

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Create - Role";
}

<!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Egreeting's role management
            <small>Create</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i> Home</a></li>
            <li>Admin</li>
            <li><a href="@Url.Action("Index")">Egreeting's role</a></li>
            <li class="active">Create</li>
        </ol>
    </section>

<!-- Main content -->
<section class="content">

    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title">Create new Egreeting's role</h3>
        </div><!-- /.box-header -->
        <form action="@Url.Action("Create")" method="POST" role="form">
            <div class="box-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label for="">Egreeting's role name</label>
                    <input type="text" class="form-control" id="EgreetingRoleName" placeholder="Egreeting's role name" name="EgreetingRoleName">
                    @Html.ValidationMessageFor(model => model.EgreetingRoleName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button class="btn btn-primary" type="button" onclick="BackToIndex()">Cancel</button>
            </div>
                
</form>
    </div>
        

</section><!-- /.content -->
</div><!-- /.content-wrapper -->
<!-- Main content -->

@section scripts{
    <script>
        function BackToIndex()
        {
            window.location.href = ('@Url.Action("Index")');
        }
    </script>
}
