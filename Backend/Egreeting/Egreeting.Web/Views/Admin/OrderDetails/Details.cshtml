@model Egreeting.Models.Models.OrderDetail
@using Egreeting.Domain
@using Egreeting.Models.Models
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Detail - OrderDetail";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Order detail management
        <small>Detail</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li>Admin</li>
        <li><a href="@Url.Action("Index")">Order details</a></li>
        <li class="active">Detail</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title">Order detail</h3>
        </div><!-- /.box-header -->
        <form>
            <div class="box-body">
                <div class="form-group">
                    @Html.LabelFor(m => m.Order.RecipientEmail)
                    @Html.EditorFor(m => m.Order.RecipientEmail, new { htmlAttributes = new { @class = "form-control", @placeholder = "SenderName", @id = "SenderName", @disabled = "disabled" } })
                </div>
                <div class="form-group">

                    @Html.LabelFor(m => m.SendStatus)
                    @if (!Model.SendStatus)
                    {
                        <p><span class="badge badge-secondary" style="background-color: orange">Not yet</span></p>
                    }
                    else
                    {
                        <p><td><span class="badge badge-primary" style="background-color: blue" style="background-color: blue">Sended</span></td></p>
                    }
                </div>
                <div class="form-group">
                    <p><label for="Thumbnail">Thumbnail</label></p>
                    <img src="~/Uploads/Thumbnails/@Model.Ecard.ThumbnailUrl" alt="Alternate Text" width="350px" />
                </div>
                <div class="form-group">
                    <label for="SendTime">Thumbnail</label>
                    <input type="datetime" name="SendTime" value="@Model.SendTime.ToString()" readonly class="form-control"/>
                </div>
            </div>

            <div class="box-footer">
                <button class="btn btn-primary" type="button" onclick="BackToIndex()">Back to index</button>

            </div>
        </form>
    </div>


</section><!-- /.content -->
</div><!-- /.content-wrapper -->
<!-- Main content -->

@section scripts{
    <script>
        function BackToIndex()
        {
            window.location.href = ('@Url.Action("Index", "Orders")');
        }
    </script>
}
