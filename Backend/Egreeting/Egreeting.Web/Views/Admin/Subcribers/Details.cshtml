@model Egreeting.Models.Models.Subcriber
@using Egreeting.Domain
@using Egreeting.Models.Models
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Detail - Subcriber";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Subcriber management
        <small>Detail</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li>Admin</li>
        <li><a href="@Url.Action("Index")">Subcribers</a></li>
        <li class="active">Detail</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title">Detail Subcriber</h3>
        </div><!-- /.box-header -->
        <form>
            <div class="box-body">
                <div class="form-group">
                    @Html.LabelFor(m => m.Email)
                    @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email", @id = "Email", @disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="box-footer">
                <button class="btn btn-primary" type="button" onclick="BackToIndex()">Back to index</button>
            </div>
        </form>
    </div>


</section><!-- /.content -->
</div><!-- /.content-wrapper -->
<!-- Main content -->

@section scripts{
    <script>
        function BackToIndex()
        {
            window.location.href = ('@Url.Action("Index")');
        }
    </script>
}
