                                    @foreach (var category in categories)
                                    {
                                        <li class="nav-item"><a class="nav-link" href="/categories/@category.CategorySlug">@category.CategoryName</a></li>
                                    }
                                </ul>
                            </li>
                            <li class="nav-item submenu dropdown">
