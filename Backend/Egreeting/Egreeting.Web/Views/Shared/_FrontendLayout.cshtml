@using Microsoft.AspNet.Identity
@using Egreeting.Models.Models
@using Egreeting.Models.AppContext
@{
    var context = new EgreetingContext();
    var user = new ApplicationUser();
    if (Request.IsAuthenticated)
    {
        user = context.Set<ApplicationUser>().Find(User.Identity.GetUserId());
    }
    var categories = context.Set<Category>().Where(x => x.Draft != true).Select(x => new { x.CategoryName, x.CategorySlug, x.Ecards.Count }).Take(5).ToList();
}

